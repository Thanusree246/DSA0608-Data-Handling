import matplotlib.pyplot as plt

months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
sales = [20000, 25000, 28000, 30000, 32000, 35000, 38000, 40000, 42000, 45000, 48000, 50000]


plt.plot(months, sales, marker='o', color='skyblue', linestyle='-')

plt.xlabel('Month')
plt.ylabel('Sales ($)')
plt.title('Monthly Sales Performance')

plt.grid(True)
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()
